generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model TutorApplication {
  id           String   @id @default(cuid())
  fullName     String
  email        String
  phone        String
  location     String
  education    String
  experience   String
  availability String
  hasTablet    Boolean
  why          String

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([email])
}
model ParentRegistration {
  id          String   @id @default(cuid())

  parentName  String
  parentEmail String   @unique
  parentPhone String
  location    String

  childName   String
  childClass  String
  examType    String?
  support     String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([parentEmail])
}

